include ../helpers/mixins.pug
.add__album
    .album__h
        h4.h__title Добавить альбом
        +btnCancelPop
    .album__b
        form.b__form
            .form__field.form__field--direction
                .field__lbl
                    label(for="name") Название
                input#name.field__it(type="text")
            .form__field.form__field--direction
                .field__lbl.field__lbl-top
                    label(for="descr") Описание
                textarea#descr.field__itx
            .form__field
                .field__cover
                    .album-cover
                        img.album-cover__img(src='assets/img/jason.jpg' alt='avatar')
                .field__cover-info
                    +btnLoad
                    .cover-info__text (файл должен быть размером не более&nbsp;
                        span 1024 КБ)
    .album__f
        +formMenu
        +btnDelete
