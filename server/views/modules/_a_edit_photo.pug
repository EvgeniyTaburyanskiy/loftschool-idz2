include ../helpers/mixins.pug
.photo-edit-wrap
  .photo-edit
    .photo-edit__h
      h4.h__title Редактировать фотографию
      +btnCancelPop
    .photo-edit__b
      form#editPhoto_form.b__form
        input(type="hidden", name="_csrf", value= csrfToken)
        input(type="hidden", name="photo_id", value= photo._id.toString())
        input(type="hidden", name="confirmed", value="N")
        .form__field.form__field--direction
          .field__lbl
            label(for="name") Название
          input#name.field__it(type="text" name='photo_name' value='')
        .form__field.form__field--direction
          .field__lbl.field__lbl-top
            label(for="descr") Описание
          textarea#descr.field__itx(name='photo_descr' value='')
    .photo-edit__f
      +formMenu('editPhoto_form')
      +btnDelete
