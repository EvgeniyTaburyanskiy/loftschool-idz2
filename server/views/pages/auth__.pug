extends ../_template

block APP_content


  br
  h4 Add Album
  form(action='/api/method/albums.addAlbum' method='POST' enctype="multipart/form-data")
    fieldset
      input(type='hidden' name='_csrf' value= csrfToken)
      label(for='album_name') album_name
      input(type='text' name='album_name' placeholder='Your album_name' autofocus)
      label(for='album_descr') album_descr
      input(type='text' name='album_descr' placeholder='Your album_descr')
      label(for='album_bg') album_bg
      input(type='file' name='album_bg')
      button(type='submit') Add Album

  br
  h4 Update Album
  form(action='/api/method/albums.updateAlbum' method='POST' enctype="multipart/form-data")
    fieldset
      input(type='hidden' name='_csrf' value= csrfToken)
      input(type='text' name='album_id' value='5790ca9f5cacd8c8103167b2')
      label(for='album_name') album_name
      input(type='text' name='album_name' placeholder='Your album_name' autofocus)
      label(for='album_descr') album_descr
      input(type='text' name='album_descr' placeholder='Your album_descr')
      label(for='album_bg') album_bg
      input(type='file' name='album_bg')
      button(type='submit') Update Album

  br
  h4 Upload User Imgs
  form(action='/api/method/users.updateUserImgs' method='POST' enctype="multipart/form-data")
    fieldset
      input(type='hidden' name='_csrf' value= csrfToken)
      if(user)
        input(type='hidden' name='user_id' value= user._id)
      label(for='ava_img') ava_img
      input(type='file' name='ava_img')
      label(for='bg_img') bg_img
      input(type='file' name='bg_img')
      button(type='submit') Update Fotos