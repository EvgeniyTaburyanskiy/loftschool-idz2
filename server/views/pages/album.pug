extends ../_template
block APP_content
  - console.log('OWNER-',owner);
  - console.log('ALBUM-',album);
  - console.log('PHOTOS-',albumPotos);

  div.bg-mask
  include ../modules/_slider_item.pug
  h.a-h-w#header(style="background-image: url(" + album._album_bg.img + ")")
    div.a-h-mask
    div.a-h-cnt
      //- If user._id.toString() === owner._id.toString()
      form.a-h-cnt__form#editAlbum_form(method="POST" enctype="multipart/form-data")
        input(type="hidden", name="_csrf", value= csrfToken)
        input(type="hidden", name="user_id", value= user._id.toString())
        div.a-form-w
          div.a-edit
            input.a-edit__title(type="text" name="album_name" id="album_name")
            textarea.a-edit__desc(name="album_descr" id="album_descr")
          button.a-bg-edit
            +use('cam','a-bg-edit__svg')
            span.a-bg-edit__span Изменить фон
            input.a-bg-edit__img(type="file" name="background" id="background" hidden)
          div.a-form-controls
            div.a-controls-w
              +formMenuReverse
    div.a-h
      div.a-person
        a.a-person__a(href="/users/" + owner._id.toString())
          img.a-person__img(src= owner.userdata.ava_img alt= owner.userdata.firstName + " " + owner.userdata.lastName )
        p.a-person__n #{owner.userdata.firstName + " " + owner.userdata.lastName}
      div.a-desc
        h1.a-desc__t #{album.name}
        p.a-desc__tx #{album.descr}
      div.a-controls
        +btnHome
        +btnEdit
  main.a-main
    section.a-info-w
      div.a-info
        div.info-photo
          +use('cam','info-photo__svg')
          span.info-photo__count 18
          span.info-photo__span Фотографий
        div.info-likes
          +use('like','info-likes__svg')
          span.info-likes__count 12
          span.info-likes__span Лайков
        div.info-comments
          +use('comments','info-comments__svg')
          span.info-comments__count 4
          span.info-comments__span Комментария
    section.a-photos-w
      div.a-photos-add
        +btnAdd
      div.a-photos
        - console.log('albumPotos - ',albumPotos)
        if (albumPotos)
          for photo in albumPotos
            +photoTileAlbum(photo)

  +footer(album._album_bg.img)
  include ../modules/_a_edit_photo
  include ../modules/_a_add_photo