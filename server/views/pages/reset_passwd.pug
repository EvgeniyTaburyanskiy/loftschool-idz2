extends ../_template
block APP_content

  form(method='POST' action="/api/method/auth.resetPasswd")
    input(type='hidden' name='_csrf' value= csrfToken)
    input(type='hidden' name='token' value= token)
    legend Reset Password
    .form-group
      label(for='password') New Password
      input.form-control(type='password', name='password', value='', placeholder='New password', autofocus)
    .form-group
      button.btn.btn-primary(type='submit') Update Password